form.form(name='form', ng-submit='$close()')
    .modal-header
        button.close(type='button', data-dismiss='modal', ng-click='$dismiss()') &times;
        h3.modal-title {{ title }}

    .modal-body
        p.textarea {{ message }}

    .modal-footer
        button.btn.btn-primary(type='submit', focus-when='true') Tak
        button.btn.btn-primary(type='button', ng-click='$dismiss()') Nie